<body class="page-body">
  <div id="root"></div>
  <script>
      window.onload = function(e){
        window.invoice.renderInvoiceApplication(
          document.getElementById("root"), {
            userData: {{{json userData}}}
          }
        );
      };
  </script>
</body>
