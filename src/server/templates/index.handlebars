    <script type="application/javascript" src="/invoice/static/react/react.min.js"></script>
    <script type="application/javascript" src="/invoice/static/react/react-dom.js"></script>
  {{else}}
    <script type="application/javascript" src="/invoice/static/react/react.js"></script>
    <script type="application/javascript" src="/invoice/static/react/react-dom.js"></script>
  {{/if}}
