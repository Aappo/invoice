{
  "name": "invoice",
  "version": "1.0.0",
  "description": "Invoice service",
  "author": "OpusCapita",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpusCapita/invoice"
  },
  "bugs": {
    "url": "https://github.com/OpusCapita/invoice/issues"
  },
  "homepage": "https://github.com/OpusCapita/invoice",
  "dependencies": {
    "@opuscapita/fsm-core": "0.0.1-beta.5",
    "@opuscapita/fsm-task-manager": "0.0.1-beta.4",
    "@opuscapita/react-dates": "0.2.6",
    "@opuscapita/react-icons": "^1.1.0",
    "@opuscapita/react-dashboard": "^0.0.4",
    "@opuscapita/react-select": "^1.0.0-rc.5-oc.5",
    "@opuscapita/i18n": "1.1.0",
    "ocbesbn-bouncer": "^0.2.11",
    "ocbesbn-db-init": "^1.1.9",
    "ocbesbn-react-components": "^0.1.16",
    "ocbesbn-service-client": "^1.1.2",
    "ocbesbn-web-init": "^2.1.11",
    "ocbesbn-blob-client": "^1.0.11",
    "bluebird": "3.0.5",
    "react-router": "3.0.0",
    "superagent": "2.3.0",
    "superagent-bluebird-promise": "4.1.0",
    "react-notification-system": "^0.2.10",
    "content-range": "1.1.0",
    "react-dropzone": "^3.7.3",
    "express-handlebars": "3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "command-line-args": "^4.0.1",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.12.1",
    "mocha-lcov-reporter": "^1.3.0",
    "coveralls": "^2.13.1",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.0",
    "raml-to-markdown": "^1.x",
    "sequelize-to-markdown": "^1.x",
    "jsdoc-to-markdown": "^3.0.0",
    "babel-eslint": "6.0.4",
    "babel-loader": "7.0.0-beta.1",
    "babel-plugin-transform-object-assign": "6.8.0",
    "webpack-polyfills-plugin": "0.0.9",
    "polyfill-promise": "4.0.1",
    "postcss-flexbugs-fixes": "^2.1.0",
    "postcss-loader": "^1.2.1",
    "precss": "^1.4.0",
    "less": "2.7.1",
    "less-loader": "2.2.3",
    "chai": "3.4.1",
    "react-svg-loader": "^1.1.1"
  },
  "scripts": {
    "start": "npm run build-client ; node src/server/index.js",
    "build-client": "${NODE_PATH}/.bin/webpack --config ./webpack.production.config.js --profile --colors --bail",
    "dev": "npm run setup-consul ; ${NODE_PATH}/.bin/nodemon --watch src/server src/server/index.js",
    "test": "npm run clean ; ${NODE_PATH}/.bin/nyc ${NODE_PATH}/.bin/mocha --require config/mocha-setup.js --recursive '**/*.spec.js'",
    "upload-coverage": "cat ./coverage/lcov.info | ${NODE_PATH}/coveralls/bin/coveralls.js",
    "test-and-upload-coverage": "npm test -- --reporter mocha-junit-reporter && npm run upload-coverage",
    "clean": "${NODE_PATH}/.bin/rimraf .nyc_output coverage test-results.xml",
    "setup-consul": "sh setup-consul.sh",
    "rest-doc": "mkdir -p wiki/rest-doc ; ${NODE_PATH}/.bin/raml2md -o file-per-resource -p wiki/rest-doc --output-ext=.endpoint.md rest-doc/main.raml",
    "domain-doc": "mkdir -p wiki/domain-doc ; ${NODE_PATH}/.bin/sq2md -o file-per-src -p wiki/domain-doc --init=init --field-bl=createdAt,updatedAt --output-ext=.model.md src/server/db/models",
    "api-doc": "mkdir -p wiki/api-doc ; ${NODE_PATH}/.bin/jsdoc2md -f $(find src/server) > wiki/api-doc/Home.md",
    "lint": "eslint src"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "**/*.spec.js"
    ],
    "check-coverage": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "require": [
      "./config/mocha-setup.js"
    ],
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
   }
}
